{%- capture content_security_policy_string -%}
default-src 'none';
img-src 'self';
font-src 'self';
style-src 'self' 'unsafe-inline';
script-src 'self' {% if jekyll.environment == "development" %}'unsafe-eval'{% endif %};
{% if jekyll.environment == "development" %}connect-src *;{% endif %}
prefetch-src 'self';
{%- endcapture -%}
